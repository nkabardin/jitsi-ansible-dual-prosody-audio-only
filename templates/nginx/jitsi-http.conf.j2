# Minimal HTTP-only nginx config for Let's Encrypt certificate acquisition
# This config is used temporarily before the SSL certificate is obtained

server {
    listen 80;
    listen [::]:80;
    server_name {{ jitsi_domain }};

    location ^~ /.well-known/acme-challenge/ {
        default_type "text/plain";
        root /var/www/html;
    }

    location / {
        return 200 "Jitsi Meet setup in progress...";
        add_header Content-Type text/plain;
    }
}
